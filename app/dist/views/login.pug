extends ./layout.pug

block content
  h1#title Starfire
  .menu#login
    h3.formHeader Pilot login
    form(action='/login' method='post')
      .callsign
        label(for='callsign') Callsign: 
        input.enterCallsign#callsign(type='text' name='callsign')
      .password
        label(for='password') Password: 
        input.enterPassword#password(type='password' name='password')
      .submit
        button.disabled(type='submit') LOG IN
    .createAccount
      p 
        a(href='/register') Create an account

block js
  include ./partials/_auth.pug
