extends ./layout.pug

block content
  .menu#gameMenu
    h3.formHeader Create or join a base
    form#gameInfo(action='/menu' method='post' onsubmit='return validateForm();')
      .create
        input.session#createSession(type='radio' name='session'  value='create')
        label(for='createSession') New Base
      .join
        input.session#joinSession(type='radio' name='session' value='join')
        label(for='joinSession') Join Base
      .difficulty
        input.difficultyChoice.valid(type='radio' name='difficulty' id='two' value='2')
        label(for='two') Easy
        input.difficultyChoice.valid(type='radio' name='difficulty' id='three' value='3' checked)
        label(for='three') Medium
        input.difficultyChoice.valid(type='radio' name='difficulty' id='four' value='4')
        label(for='four') Hard
        input.difficultyChoice.valid(type='radio' name='difficulty' id='five' value='5')
        label(for='five') Brutal
      .session
        label(for='sessionName') Base name: 
        input#sessionName(type='text' name='sessionName')
      fieldset.carousel#pilots
        legend Pilot ability choices
        div.pilots
          a.backward(data-move='backward' data-carousel='pilot' hidden aria-hidden='true')
          ul.carousel-labels(left0)
            li
              label(for='medalOfHonor')
                img(src='public/img/star.png' alt='medalOfHonor')
            li
              label(for='deadeye')
                img(src='public/img/crosshair.png')
            li
              label(for='heavyArmor')
                img(src='public/img/shield.png')
          a.forward(data-move='forward' data-carousel='pilot' hidden aria-hidden='true')
          ul.carousel-radios
            li
              input.valid(type='radio' data-value='0' name='pilot' id='medalOfHonor' value='medalOfHonor' checked)
              span
            li
              input.valid(type='radio' data-value='1' name='pilot' id='deadeye' value='deadeye')
              span
            li
              input.valid(type='radio' data-value='2' name='pilot' id='heavyArmor' value='heavyArmor')
              span

